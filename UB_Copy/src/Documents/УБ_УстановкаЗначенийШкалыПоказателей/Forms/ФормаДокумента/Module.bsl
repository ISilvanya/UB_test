&НаСервере
Процедура ПереформироватьПроценты()
	
	Объект.ПропорциональныеЗначения.Сортировать("Значение Возр");
	Если Объект.ПропорциональныеЗначения.Количество() > 1 Тогда
		МаксЗначение = Объект.ПропорциональныеЗначения[Объект.ПропорциональныеЗначения.Количество()-1].Значение;
		Для каждого Строка Из Объект.ПропорциональныеЗначения Цикл
			Строка.Процент = ?(ЗначениеЗаполнено(Строка.Значение),Строка.Значение,0)/МаксЗначение*100;
		КонецЦикла;	
	КонецЕсли;
	
КонецПроцедуры	


&НаСервере
Процедура ПеренестиПроцентовку()
	
	Объект.ЗначенияШкалы.Очистить();
	ПорядковыйНомер = 0;
	Пока ПорядковыйНомер <= Объект.ПропорциональныеЗначения.Количество() Цикл
		НоваяСтрока = Объект.ЗначенияШкалы.Добавить();
		НоваяСтрока.НижняяГраница = ?(ПорядковыйНомер=0,0,Объект.ПропорциональныеЗначения[ПорядковыйНомер-1].Процент);
		НоваяСтрока.ВерхняяГраница = ?(ПорядковыйНомер = Объект.ПропорциональныеЗначения.Количество(),0,Объект.ПропорциональныеЗначения[ПорядковыйНомер].Процент-0.00001);
		ПорядковыйНомер = ПорядковыйНомер+1; 
	КонецЦикла;	
	
	
КонецПроцедуры	

&НаКлиенте
Процедура Перенести(Команда)
	ПеренестиПроцентовку();
